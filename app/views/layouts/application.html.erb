<!DOCTYPE html>
<html>
  <head>
    <title>TuneFm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <% if alert %>
  <p class="alert">
  <%= alert %>
  </p>
  <% elsif notice %>
  <p class="notice">
  <%= notice %>
  </p>
  <%end%>
  <% unless current_page?(root_path) %>
	<%= render 'layouts/header'; %>
<% end %>
    <%= yield %>
  </body>
</html>
